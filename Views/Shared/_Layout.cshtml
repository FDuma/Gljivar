<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Gljivar</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />

    @*Comments*@
    <link rel="stylesheet" type="text/css" href="~/css/home.css">
    <link rel="stylesheet" type="text/css" href="~/css/dropNavBar.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" type="text/css" href="~/css/formRow.css">
    <link rel="stylesheet" type="text/css" href="~/css/comment.css">
    <script src="jquery-3.5.1.min.js"></script>


    @*data table .net*@
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/dt/dt-1.10.20/datatables.min.css" />
    <script type="text/javascript" src="https://cdn.datatables.net/v/dt/dt-1.10.20/datatables.min.js"></script>
    <script type="text/javascript" src="https://code.jquery.com/jquery-3.3.1.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Objava" asp-action="Index">Gljivar</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">

                    @{
                        bool? userIn = ViewBag.userIn;
                        string userName = ViewBag.userName == null ? "-" : ViewBag.userName;
                    }

                    <ul class="navbar-nav flex-grow-1">

                        <li class="nav-item">
                            @*indeks -> funkcija, Objava -> Kontroler *@
                            <a class="nav-link text-dark" href="@Url.Action("Index", "Objava")">Objave</a>
                        </li>

                        <li class="nav-item">
                            @*indeks -> funkcija, korisnik -> Kontroler *@
                            <a class="nav-link text-dark" href="@Url.Action("Index", "Korisnik")">Korisnici (CRUD)</a>
                        </li>

                        <li class="nav-item">
                            @*indeks -> funkcija, Gljiva -> Kontroler *@
                            <a class="nav-link text-dark" href="@Url.Action("Index", "Gljiva")">Gljive</a>
                        </li>

                        <li class="nav-item">
                            @*indeks -> funkcija, Gljiva -> Kontroler *@
                            <a class="nav-link text-dark" href="@Url.Action("Index", "Biljeska")">Biljeske</a>
                        </li>

                        <li class="nav-item">
                            @*indeks -> funkcija, Gljiva -> Kontroler *@
                            <a class="nav-link text-dark" href="@Url.Action("Index", "GljivarDrustvo")">Gljivarska društva</a>
                        </li>

                        <li class="nav-item">
                            @*indeks -> funkcija, Gljiva -> Kontroler *@
                            <a class="nav-link text-dark" href="@Url.Action("Index", "Dogadaj")">Dogadaji</a>
                        </li>

                        <!--<a href="#home">Master Detail</a>-->

                        @if (userIn != true)
                        {
                            <a class="nav-link text-dark" href="@Url.Action("Index", "Login")" style="float: right; margin-right: 20px;">Log in</a>
                        }
                        else
                        {
                            <a class="nav-link text-dark" href="@Url.Action("Logout", "Login")" style="float: right; margin-right: 20px;">Log out</a>
                            <a class="nav-link text-dark" href="#" style="float: right; margin-right: 20px;"> Hi  @userName</a>
                        }

                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - Gljivar - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    @*<script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>*@
    <script type="text/javascript" src="https://cdn.datatables.net/v/dt/dt-1.10.20/datatables.min.js"></script>
    <script type="text/javascript" src="https://code.jquery.com/jquery-3.3.1.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            var table = $('#example').DataTable({
                pageLength: 5,
                lengthMenu: [[5, 10, 20], [5, 10, 20]]
            })
            //$('#example').DataTable();
        });
    </script>
    @RenderSection("Scripts", required: false)
</body>
</html>
